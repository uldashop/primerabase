<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_employee_talent_view" model="ir.ui.view">
        <field name="name">Employee Talent Growth</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page id="talent_growth" string="Talent Growth" groups="l10n_ec_talent_growth.group_hr_talent_growth_manager">
                    <group>
                        <field name="performance" />
                        <field name="kpi" />
                        <field name="assessment_center" />
                        <field name="cognitive" />
                        <field name="emotional" />
                    </group>
                </page>
            </xpath>
        </field>
        </record>
    </data>
</odoo>